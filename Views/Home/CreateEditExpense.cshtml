@{
    ViewData["Title"] = "Create / Edit";
}

@model Expenses.Models.Expense

<div class="text-center">
    <h1 class="display-4">
        Create / Edit an expense
    </h1>
</div>

<form asp-action="CreateEditExpense" asp-controller="Home" method="post">
    <input hidden type="number" placeholder="0" class="form-control" asp-for="Id">
    <label class="mb-2">Value $</label>
    <input type="number" placeholder="0" class="form-control" asp-for="Value" step="0.01">
    <label class="mb-2">Description</label>
    <input type="text" placeholder="Add a description" class="form-control" asp-for="Description">
    <button class="btn btn-primary mt-4" type="submit">Submit</button>
</form>
